@model IEnumerable<Capstone.Models.Items>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { items = Model, order = Capstone.Models.OrderBy.Name })
        </th>
        <th>
            @Html.ActionLink("Quantity", "Index", new { items = Model, order = Capstone.Models.OrderBy.Quantity })
        </th>
        <th>
            @Html.ActionLink("Base Quantity", "Index", new { items = Model, order = Capstone.Models.OrderBy.BaseQuantity })
        </th>
        <th>
            @Html.ActionLink("Use By", "Index", new { items = Model, order = Capstone.Models.OrderBy.UseBy })
        </th>
        <th></th>
    </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseQuantity)
                </td>
                <td>
                    @Html.ActionLink(item.UseBy.ToShortDateString(), "SearchBy", "Items", new { attrib = "UseBy", value = item.UseBy }, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
